<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:custom="http://schemas.android.com/apk/res-auto"
   	xmlns:tools="http://schemas.android.com/tools"
   	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:id="@+id/parent_layout">
    
    
	 <com.example.myhorizontalscrollview.MyHorizontalScrollView 
        android:id="@+id/ringtonescrollview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        custom:numberThumbnail="8"
		custom:Thumbnail_width="70"
		custom:Thumbnail_height="70"
		custom:NormalThumbnailImage="@drawable/ic_music_10"
        custom:HighlightThumbnailImage="@drawable/songthumbnailbright"
        custom:isResetHighLight="false"
        custom:layout_location="0"
        custom:isEditable="false"
        custom:enableScrollListener="false"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:visibility="gone" >
    </com.example.myhorizontalscrollview.MyHorizontalScrollView>
     
    <com.example.myhorizontalscrollview.MyHorizontalScrollView 
        android:id="@+id/musicscrollview"
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="90dp"
        custom:numberThumbnail="0"
        custom:Thumbnail_width="80"
        custom:Thumbnail_height="80"
        custom:NormalThumbnailImage="@drawable/ic_music_071"
        custom:HighlightThumbnailImage="@drawable/ic_music_07"
        custom:layout_location="2"
        android:scrollbars="none"
        android:layout_alignParentBottom="true">
    </com.example.myhorizontalscrollview.MyHorizontalScrollView>

    <FrameLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent" 
       android:layout_above="@id/musicscrollview"
       android:layout_marginTop="70dp">
        <ImageView 
            android:id="@+id/imv_startup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/rain_jpg"
            android:padding="10dp" />
        
        <android.support.v4.view.ViewPager
	       android:id="@+id/viewpager"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent" 
	       android:visibility="invisible">
	       
	</android.support.v4.view.ViewPager>
    </FrameLayout>
   
   <Button
       android:id="@+id/btplayall"
       android:layout_width="100dp"
       android:layout_height="100dp"
	   android:layout_centerInParent="true"
       android:visibility="invisible"/> 
       
   <ListView
           android:id="@+id/lv"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="80dp"
           android:layout_marginBottom="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/listsong_drawable"
           android:divider="@drawable/list_divider"
           android:scrollbarThumbVertical="@drawable/listview_scrollbar_style"
           android:fadeScrollbars="false" >

    </ListView>
      <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:background="@drawable/volume_controller_background"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	     android:layout_marginTop="90dp"
	    android:id="@+id/ln_volume"
	    android:padding="10dp" >

	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:text="RINGTONE"
				android:layout_gravity="center_vertical|center_horizontal"
				android:textColor="#ffffff" />
	        <SeekBar 
	            android:id="@+id/ringtone_volume_seekbar"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:thumb="@drawable/seekbar_thumb"
		        android:progressDrawable="@drawable/seekbar_styling" 
		        android:minHeight="3dp"
		        android:maxHeight="5dp"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:layout_marginTop="5dp"
	      android:padding="10dp">
	        <TextView 
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
			  android:text="MUSIC"
			  android:layout_gravity="center_vertical|center_horizontal"
			  android:textColor="#ffffff"/>
	        
	      	<SeekBar 
	          android:id="@+id/music_volume_seekbar"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:thumb="@drawable/seekbar_thumb"
	          android:progressDrawable="@drawable/seekbar_styling" 
	          android:minHeight="3dp"
	          android:maxHeight="5dp"/>
	  	</LinearLayout>
	</LinearLayout> 
	
      
  <!--   <include 
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/> -->
	
</RelativeLayout>
