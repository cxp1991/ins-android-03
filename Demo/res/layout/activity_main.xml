<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.myhorizontalscrollview.MyHorizontalScrollView 
        android:id="@+id/ringtonescrollview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        custom:numberThumbnail="20"
		custom:Thumbnail_width="100"
		custom:NormalThumbnailImage="@drawable/songthumbnaildark"
        custom:HighlightThumbnailImage="@drawable/songthumbnailbright"
        android:scrollbars="none"
        android:layout_alignParentTop="true">
    </com.example.myhorizontalscrollview.MyHorizontalScrollView>
    
    <com.example.myhorizontalscrollview.MyHorizontalScrollView 
        android:id="@+id/musicscrollview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        custom:numberThumbnail="20"
        custom:Thumbnail_width="100"
        custom:NormalThumbnailImage="@drawable/songthumbnaildark"
        custom:HighlightThumbnailImage="@drawable/songthumbnailbright"
        android:scrollbars="none"
        android:layout_alignParentBottom="true">
    </com.example.myhorizontalscrollview.MyHorizontalScrollView>

</RelativeLayout>
